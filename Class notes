  <script>
    const form = document.getElementById('emailForm');
    const input = document.getElementById('emailInput');
    const notes = document.getElementById('notes');
    const message = document.getElementById('message');
    const skipBtn = document.getElementById('skipBtn');

    function showNotes(){
      notes.classList.add('show');
      notes.setAttribute('aria-hidden','false');
    }

    function saveEmail(e){
      const email = input.value.trim();
      if(!email) return;
      // basic email pattern
      const pattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if(!pattern.test(email)){
        alert('Please enter a valid email address.');
        return;
      }
      try{
        localStorage.setItem('classnotes_email', email);
        message.style.display = 'block';
      }catch(err){
        console.warn('Could not save to localStorage', err);
      }
      showNotes();
    }

    form.addEventListener('submit',(ev)=>{ ev.preventDefault(); saveEmail(); });
    skipBtn.addEventListener('click', showNotes);

    // If email already saved, show notes immediately
    window.addEventListener('load', ()=>{
      const e = localStorage.getItem('classnotes_email');
      if(e){ input.value = e; message.style.display = 'block'; showNotes(); }
    });

  </script>
